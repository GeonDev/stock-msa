# ==========================================
# Config Server & Common
# ==========================================
# SSH Private Key for Config Repository (Replace with actual key content)
# Use "\n" for newlines if setting as a single string variable, or handle as multiline depending on environment
GIT_PRIVATE_KEY="-----BEGIN OPENSSH PRIVATE KEY-----\n...\n-----END OPENSSH PRIVATE KEY-----"

# Encryption Key for Config Server
ENCRYPT_KEY=secret

# Security Credentials
CONFIG_SERVER_USER=admin
CONFIG_SERVER_PASSWORD=1234
EUREKA_USER=admin
EUREKA_PASSWORD=1234
GATEWAY_USER=admin
GATEWAY_PASSWORD=1234

# ==========================================
# Service API Keys
# ==========================================
# Public Data Portal Service Key (Decoding Key recommended)
DATA_GO_SERVICE_KEY=YOUR_SERVICE_KEY

# DART (FSS) API Key
DART_API_KEY=YOUR_API_KEY

# ==========================================
# Database Connection (Local Defaults)
# ==========================================
# Note: Each service uses its own DB URL.
# If running services locally, ensure ports match docker-compose (3306, 3307, 3308).

# Shared Credentials (if applicable)
MYSQL_USER=user
MYSQL_PASSWORD=password

# stock-corp
STOCK_CORP_DB_URL=jdbc:mysql://localhost:3306/stock_corp?serverTimezone=Asia/Seoul&characterEncoding=UTF-8

# stock-finance
STOCK_FINANCE_DB_URL=jdbc:mysql://localhost:3307/stock_finance?serverTimezone=Asia/Seoul&characterEncoding=UTF-8

# stock-stock
STOCK_STOCK_DB_URL=jdbc:mysql://localhost:3308/stock_stock?serverTimezone=Asia/Seoul&characterEncoding=UTF-8
